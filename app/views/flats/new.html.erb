<h1>Create a new flat</h1>

<div class="container">
  <div class="row">
    <%= simple_form_for(@flat) do |f| %>
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <%= f.input :name %>
    </div>
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <%= f.input :address %>
    </div>
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <%= f.input :description %>
    </div>
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <%= f.input :number_of_guests %>
    </div>
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <%= f.input :price_per_night %>
    </div>
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <%= f.button :submit , class: "btn btn-success"%>
    </div>
    <% end %>
  </div>


</div>
